<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SeleniumTestSuite" parallel="tests" thread-count="2">
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="com.codefleet.cfinspector.modules.tests.HomePageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.SeleniumPageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.CFInspectorTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.ABTestPageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.AddRemoveElementsPageTest"/>
        </classes>
    </test>
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <parameter name="headless" value="true"/>
        <classes>
            <class name="com.codefleet.cfinspector.modules.tests.HomePageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.SeleniumPageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.CFInspectorTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.ABTestPageTest"/>
            <class name="com.codefleet.cfinspector.modules.tests.AddRemoveElementsPageTest"/>
        </classes>
    </test>
</suite>